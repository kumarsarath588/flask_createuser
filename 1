import subprocess

username = 'kumarsarath588'
if not username.isalnum():
  print("Username {} can only contain [a-z,A-z,1-9]".format(username))

def userExistance(username):
  cmd = subprocess.Popen(['getent', 'passwd', username],stdout=subprocess.PIPE,stderr=subprocess.PIPE)
  out,error = cmd.communicate()
  memory = out.splitlines()
  print(memory)

userExistance('sarath')
